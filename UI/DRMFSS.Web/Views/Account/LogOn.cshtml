@model DRMFSS.Web.Models.LogOnModel
@using DRMFSS.Web.Helpers
@{
    ViewBag.Title = @Html.Translate("Log On");
}


@*<p>
    Please enter your user name and password. @Html.ActionLink("Register", "Register") if you don't have an account.
</p>*@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm())
    {
    <table width="500px" align="center" class="borderless">
        <tr>
            <td colspan="2">
                <h2>@Html.Translate("Log On")</h2>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @Html.ValidationSummary(true, Html.Translate("Login was unsuccessful. Please correct the errors and try again."))

            </td>
        </tr>
        <tr>
            <td class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </td>
            <td class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                @Html.LabelFor(m => m.Password)
            </td>
            <td class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </td>
        </tr>
        <tr>
            <td  class="editor-label"> @Html.LabelFor(m => m.RememberMe)</td>
            <td class="editor-field">
                @Html.CheckBoxFor(m => m.RememberMe)
            </td>
        </tr>
        <tr>
            <td  class="editor-label"></td>
            <td class="editor-field" style="text-align: left">
                <input class="t-button" style="width: 105px; height: 25px;" type="submit" value="Log On" />
                <input class="t-button" style="width: 105px; height: 25px;" type="submit" value="Cancel" />
                <br />
                 @if (!Request.IsAuthenticated)
                     {
                    <br />
                    @Html.ActionLink(Html.Translate("Unable to login?"), "ForgetPasswordRequest")
                     }
            </td>
        </tr>
    </table>
    <br />
   
}
