@model DRMFSS.Web.Models.UserRolesModel


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    foreach (var item in Model.UserRoles)
    {
        
        @Html.Hidden(string.Format("[{0}].RoleId", item.RoleId), item.RoleId)
         @Html.CheckBox(string.Format("[{0}].Selected", item.RoleId),item.Selected)
         
        @Html.Label(string.Format("[{0}].RoleName", item.RoleId), item.RoleName)
        <br />
    }
}


