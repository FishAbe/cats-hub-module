@{
    ViewBag.Title = Html.Translate("Distribution Report");
}

<p>@Html.Translate("This report shows the Distribution Report.")</p>
 

@Html.DevExpress().GetStyleSheets(new StyleSheet { ExtensionSuite = ExtensionSuite.Report }) 
