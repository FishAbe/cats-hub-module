@{
    ViewBag.Title = Html.Translate("Free Stock Report");
}

<p>@Html.Translate("This report shows the Free Stock Report.")</p>

@Html.DevExpress().GetStyleSheets(new StyleSheet { ExtensionSuite = ExtensionSuite.Report }) 
